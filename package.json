{
    "name": "example",
    "version": "0.0.0",
    "main": "app/index.js",
    "scripts": {
        "dev": "vite",
        "build:electron": "bun ./esbuild.config.mjs",
        "build:renderer": "vite build",
        "build:dev:electron": "bun ./esbuild.config.mjs --watch",
        "build": "npm run build:renderer && npm run build:electron",
        "lint": "eslint .",
        "test": "jest",
        "preview": "vite preview",
        "start": "electronmon ./app",
        "electron:vite:build": "concurrently \"cross-env BROWSER=none bun dev\" \"wait-on http://localhost:5173 && bun build:dev:electron\"",
        "electron:dev": "concurrently \"bun electron:vite:build\" \"wait-on http://localhost:5173 && bun start\"",
        "dist": "npm run build && electron-builder --config electron-builder.config.js -w"
    },
    "dependencies": {
        "@types/bun": "^1.2.10",
        "electron-log": "^5.3.4",
        "electron-serve": "^2.1.1",
        "electron-updater": "^6.6.2",
        "electronmon": "^2.0.3",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-icons": "^5.5.0"
    },
    "devDependencies": {
        "@fortawesome/free-solid-svg-icons": "^6.7.2",
        "@fortawesome/react-fontawesome": "^0.2.2",
        "@tailwindcss/postcss": "^4.1.4",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "@vitejs/plugin-react": "^4.4.1",
        "autoprefixer": "^10.4.21",
        "bun": "^1.2.10",
        "concurrently": "^9.1.2",
        "cross-env": "^7.0.3",
        "electron": "^35.2.1",
        "electron-builder": "^26.0.12",
        "eslint": "^9.25.1",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.0.0",
        "postcss": "^8.5.3",
        "sass-embedded": "^1.87.0",
        "tailwindcss": "^4.1.4",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.31.0",
        "vite": "^6.3.3",
        "wait-on": "^8.0.3"
    },
    "build": {
        "appId": "com.example",
        "productName": "example",
        "copyright": "Copyright Â© 2021 ${author}",
        "linux": {
            "target": [
                "pacman"
            ],
            "icon": "build/icon.png"
        },
        "win": {
            "icon": "build/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "files": [
            "dist/**/*",
            "main/**/*"
        ],
        "directories": {
            "buildResources": "assets",
            "output": "dist_electron"
        }
    }
}
